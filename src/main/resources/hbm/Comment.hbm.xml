<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.pojo.Comment" table="comment" lazy="false" dynamic-update="true">
        <id name="id" column="id" type="java.lang.Integer">
            <generator class="identity"/>
        </id>
        <many-to-one name="targetPost" column="target_post" class="com.pojo.Post" lazy="false"/>
        <many-to-one name="targetComment" column="target_comment" class="com.pojo.Comment" lazy="false"/>
        <many-to-one name="author" column="author" class="com.pojo.Account" lazy="false"/>
        <property name="time" column="time" type="java.util.Date"/>
        <property name="content" column="content" type="java.lang.String"/>
        <list name="comments" cascade="all"  lazy="false">
            <key column="target_comment"/>
            <index column="floor" type="java.lang.Integer"/>
            <one-to-many class="com.pojo.Comment"/>
        </list>
    </class>
</hibernate-mapping>