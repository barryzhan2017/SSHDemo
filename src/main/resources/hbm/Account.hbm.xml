<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.pojo.Account" table="account" lazy="false" dynamic-update="true">
        <id name="id" column="id" type="java.lang.Integer">
            <generator class="identity"/>
        </id>
        <property name="password" column="password" type="java.lang.String"/>
        <property name="nickname" column="nickname" type="java.lang.String"/>
        <property name="portrait" column="portrait" type="byte[]"/>
        <property name="major" column="major" type="java.lang.String"/>
        <property name="email" column="email" type="java.lang.String"/>
        <property name="birthday" column="birthday" type="java.util.Date"/>
    </class>
</hibernate-mapping>